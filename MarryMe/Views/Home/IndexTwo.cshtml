<section class="section" id="portfolio">
	<div class="container-fluid">
		<form name="inputForm">
			<div id="portfolioPlaceholder" class="col-lg-6 half bg1">
				<div class="row">
					<div class="col-lg-10 col-lg-offset-1">
						<div class="block block-lg form-control form-block tile-blue" color:white">
							<h2>Жених</h2>
							<p>Данные жениха</p>
							<div class="row form-group">
								<div class="col-md-6 col-sm-12 block-lg-label">
									<input type="text" class="form-control tile-blue" placeholder="Имя" name="bridegroomName" ng-model="bridegroom.name" required ng-pattern="/^[а-яА-Я]+$/" />
								</div>
								<div class="col-md-6 col-sm-12 block-lg-label">
									<input type="text" class="form-control tile-blue" placeholder="Фамилия" name="bridegroomSurName" ng-model="broom.surName" required ng-pattern="/^[а-яА-Я]+$/" />
								</div>
								<div class="col-md-6 col-sm-12 block-lg-label">
									<input type="text" class="form-control tile-blue" placeholder="Отчество" name="bridegroomMiddleName" ng-model="bridegroom.middleName" required ng-pattern="/^[а-яА-Я]+$/" />
								</div>
								<div class="col-md-6 col-sm-12 block-lg-label">
									<input type="text" class="form-control tile-blue" placeholder="Телефон" name="bridegroomPhoneNumber" ng-model="bridegroom.phoneNumber" ng-pattern="/\+[0-9]{12}/" />
								</div>
								<div class="col-md-6 col-sm-12 block-lg-label">
									<input type="text" class="form-control tile-blue" placeholder="E-mail" name="bridegroomEmail" ng-model="bridegroom.email" />
								</div>
								<div class="col-md-6 col-sm-12 block-lg-label">
									<input type="text" class="form-control tile-blue" placeholder="Номер паспорта" name="bridegroomPersinalNumber" ng-model="bridegroom.personalNumber" />
								</div>
							</div>
						</div>
						<a class="btn btn-main smooth-scroll btn-blue pull-right" style="color:white; margin-bottom:10px" href="#services">Назад</a>
					</div>
				</div>
			</div>

			<div class="col-lg-6 half bg2">

				<div class="row">
					<div class="col-lg-10 col-lg-offset-1">

						<div class="block block-lg form-control form-block tile-pink" color:white">
							<h2>Невеста</h2>
							<p>Данные невесты</p>
							<div class="row form-group">
								<div class="col-md-6 col-sm-12 block-lg-label">
									<input type="text" class="form-control tile-pink" placeholder="Имя" name="brideName" ng-model="bride.name" required ng-pattern="/^[а-яА-Я]+$/" />
								</div>
								<div class="col-md-6 col-sm-12 block-lg-label">
									<input type="text" class="form-control tile-pink" placeholder="Фамилия" name="brideSurName" ng-model="bride.surName" required ng-pattern="/^[а-яА-Я]+$/" />
								</div>
								<div class="col-md-6 col-sm-12 block-lg-label">
									<input type="text" class="form-control tile-pink" placeholder="Отчество" name="brideMiddleName" ng-model="bride.middleName" required ng-pattern="/^[а-яА-Я]+$/" />
								</div>
								<div class="col-md-6 col-sm-12 block-lg-label">
									<input type="text" class="form-control tile-pink" placeholder="Телефон" name="bridePhoneNumber" ng-model="bride.phoneNumber" ng-pattern="/\+[0-9]{12}/" />
								</div>
								<div class="col-md-6 col-sm-12 block-lg-label">
									<input type="text" class="form-control tile-pink" placeholder="E-mail" name="brideEmail" ng-model="bride.email" />
								</div>
								<div class="col-md-6 col-sm-12 block-lg-label">
									<input type="text" class="form-control tile-pink" placeholder="Номер паспорта" name="bridePersonalNumber" ng-model="bride.personalNumber" />
								</div>
							</div>
						</div>
						<a class="btn btn-main smooth-scroll btn-pink" style="color:white; margin-bottom:10px">Подтвердить</a>
					</div>
					<ul>
						<li style="color:red"
							ng-show="(inputForm.bridegroomName.$dirty && inputForm.bridegroomName.$error.required)  ||
            (inputForm.bridegroomSurName.$dirty && inputForm.bridegroomSurName.$error.required) ||
            (inputForm.bridegroomMiddleName.$dirty && inputForm.bridegroomMiddleName.$error.required) ||
            (inputForm.brideName.$dirty && inputForm.brideName.$error.required) ||
            (inputForm.brideSurName.$dirty && inputForm.brideSurName.$error.required) ||
            (inputForm.brideMiddleName.$dirty && inputForm.brideMiddleName.$error.required)
            ">Заполните обязательные поля</li>
						<li style="color:red"
							ng-show="inputForm.bridegroomEmail.$dirty && inputForm.bridegroomEmail.$error.email ||
            inputForm.brideEmail.$dirty && inputForm.brideEmail.$error.email
            ">Не верный e-mail</li>
						<li style="color:red"
							ng-show="inputForm.bridegroomName.$dirty && inputForm.bridegroomName.$error.pattern  ||
            inputForm.bridegroomSurName.$dirty && inputForm.bridegroomSurName.$error.pattern ||
            inputForm.bridegroomMiddleName.$dirty && inputForm.bridegroomMiddleName.$error.pattern ||
            inputForm.brideName.$dirty && inputForm.brideName.$error.pattern ||
            inputForm.brideSurName.$dirty && inputForm.brideSurName.$error.pattern ||
            inputForm.brideMiddleName.$dirty && inputForm.brideMiddleName.$error.pattern
            ">Используйте русские буквы</li>
						<li style="color:red"
							ng-show="inputForm.bridegroomPhoneNumber.$error.pattern && inputForm.bridePhoneNumber.$error.pattern">Заполните хотябы одно поле с номером телефона</li>
					</ul>
				</div>
			</div>
		</form>
	</div>

</section><!-- /#portfolio -->

<section class="section" id="contact">
	<div class="container-fluid">

		<div class="col-lg-6 half"></div>

		<div class="col-lg-6 half">

			<div class="row">
				<div class="col-lg-8 col-lg-offset-2">

					<div class="section-header">
						<h2 class="section-title">Contact</h2>
						<h3 class="section-subtitle">We love talking</h3>
					</div>

					<form id="contact" method="post" class="form" role="form">
						<div class="form-group">
							<input class="form-control" id="subject" name="subject" placeholder="Subject" type="text" />
						</div>
						<div class="form-group">
							<input class="form-control" id="name" name="name" placeholder="Name" type="text" />
						</div>
						<div class="form-group">
							<input class="form-control" id="email" name="email" placeholder="Email" type="text" />
						</div>
						<textarea class="form-control" id="message" name="message" placeholder="Message" rows="6"></textarea>
						<br />
						<button class="btn btn-velvet" type="submit">Submit</button>
					</form>

				</div>
			</div>

		</div>

	</div>
</section><!-- /#contact -->

