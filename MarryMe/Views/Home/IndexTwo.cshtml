@{
	ViewBag.Title = "IndexTwo";
}

<section id="intro" class="section bg-image">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3">
				<div class="text-center">
					<h1>Регистрация брака</h1>
					<p>На этом сайте вы можете подать заявку на регистрацию брака.</p>
					<a class="btn btn-glass btn-main smooth-scroll" href="#mission">Начать регистрацию</a>
				</div>
			</div>
		</div>
	</div>
</section><!-- /#intro -->

<section class="section" id="mission">
	<div class="container-fluid">
		<div class="responsive-calendar">
			<div class="col-lg-6 half">
				<div class="row">
					<div class="col-lg-8 col-lg-offset-2">

						<div class="section-header">
							<div class="controls" style="margin-bottom:20px">
								<a class="pull-left" data-go="prev12"><div class="calendar-btn left glyphicon glyphicon-arrow-left"></div></a>
								<h4 class="calendar-title" style="color:black">Год: <span data-head-year></span></h4>
								<a class="pull-right" data-go="next12"><div class="calendar-btn right glyphicon glyphicon-arrow-right"></div></a>
							</div>


							<div class="row">
								<div ng-repeat="month in months">
									<div class="col-md-4 col-sm-4 col-xs-6">
										<div class="block text-color form-control resize month-background-color">
											<div class="month-text-color">
												<h3>{{month}} 70%</h3>
												<div class="progress">
													<div class="progress-bar progress-background" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 10%;">
														<span class="sr-only">60% Complete</span>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>

						</div>  <!-- Header -->

						<p class="text-lg text-italic text-muted">*в процентах показана занятость месяца.</p>
					</div>
				</div>
			</div>

			<div class="col-lg-6 half">

				<div class="row">
					<div class="col-lg-8 col-lg-offset-2">

						<div class="section-header">
							<div class="controls">
								<a class="pull-left" data-go="prev"><div class="calendar-btn left glyphicon glyphicon-arrow-left"></div></a>
								<h4 class="calendar-title" style="color:black">Месяц: <span data-head-month></span></h4>
								<a class="pull-right" data-go="next"><div class="calendar-btn right glyphicon glyphicon-arrow-right"></div></a>
							</div>

							<hr />

							<div class="day-headers">
								<div class="day header">Пн</div>
								<div class="day header">Вт</div>
								<div class="day header">Ср</div>
								<div class="day header">Чт</div>
								<div class="day header">Пт</div>
								<div class="day header">Сб</div>
								<div class="day header">Вс</div>
							</div>
							<div class="days" data-group="days">

							</div>
						</div>
						<p class="text-lg text-italic text-muted">Выбранная вами дата: 5 января 2016</p>
					</div>
				</div>

			</div>
		</div><!-- Calendar -->
	</div>
</section><!-- /#mission -->

<section class="section" id="services">
	<div class="container-fluid">

		<div class="col-lg-6 half">
			<div class="row">
				<div class="col-lg-8 col-lg-offset-2">

					<div class="section-header">
						<h1 class="title field">Выбор времени</h1>
					</div>

					<div ng-repeat="time in times">
						<div class="col-md-4 col-sm-4 col-xs-4">
							<div class="block text-color form-control resize month-background-color">
								<div class="month-text-color">
									<h3>{{time}}</h3>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-6 half">

			<div class="row">
				<div class="col-lg-8 col-lg-offset-2">

					<div class="section-header">
						<h1 class="title field">Выбор зала</h1>
					</div>

					<div class="row">
						<div ng-repeat="hall in halls">
							<div class="col-md-6 col-sm-6 col-xs-6">
								<div class="block text-color form-control resize tile">
									<h3>{{hall}}</h3>
									<p>Описание</p>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>

		</div>

	</div>
</section><!-- /#services -->

<section class="section" id="portfolio">
	<div class="container-fluid">
		<div id="portfolioPlaceholder" class="col-lg-6 half bg1">
			<div class="row">
				<div class="col-lg-10 col-lg-offset-1">
					<div class="block block-lg form-control form-block" color:white">
						<h2>Жених</h2>
						<p>Данные жениха</p>
						<div class="row form-group">
							<div class="col-md-6 col-sm-12 block-lg-label">
								<input type="text" class="form-control" placeholder="Имя" />
							</div> 
							<div class="col-md-6 col-sm-12 block-lg-label">
								<input type="text" class="form-control" placeholder="Фамилия" />
							</div>
							<div class="col-md-6 col-sm-12 block-lg-label">
								<input type="text" class="form-control" placeholder="Отчество" />
							</div>
							<div class="col-md-6 col-sm-12 block-lg-label">
								<input type="text" class="form-control" placeholder="Телефон" />
							</div>
							<div class="col-md-6 col-sm-12 block-lg-label">
								<input type="text" class="form-control" placeholder="E-mail" />
							</div>
							<div class="col-md-6 col-sm-12 block-lg-label">
								<input type="text" class="form-control" placeholder="Номер паспорта" />
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-6 half bg2">

			<div class="row">
				<div class="col-lg-10 col-lg-offset-1">

					<div class="block block-lg form-control form-block" color:white">
						<h2>Невеста</h2>
						<p>Данные невесты</p>
						<div class="row form-group">
							<div class="col-md-6 col-sm-12 block-lg-label">
								<input type="text" class="form-control" placeholder="Имя" />
							</div>
							<div class="col-md-6 col-sm-12 block-lg-label">
								<input type="text" class="form-control" placeholder="Фамилия" />
							</div>
							<div class="col-md-6 col-sm-12 block-lg-label">
								<input type="text" class="form-control" placeholder="Отчество" />
							</div>
							<div class="col-md-6 col-sm-12 block-lg-label">
								<input type="text" class="form-control" placeholder="Телефон" />
							</div>
							<div class="col-md-6 col-sm-12 block-lg-label">
								<input type="text" class="form-control" placeholder="E-mail" />
							</div>
							<div class="col-md-6 col-sm-12 block-lg-label">
								<input type="text" class="form-control" placeholder="Номер паспорта" />
							</div>
						</div>
					</div>

				</div>
			</div>

		</div>
	</div>
</section><!-- /#portfolio -->

<section class="section" id="contact">
	<div class="container-fluid">

		<div class="col-lg-6 half bg"></div>

		<div class="col-lg-6 half">

			<div class="row">
				<div class="col-lg-8 col-lg-offset-2">

					<div class="section-header">
						<h2 class="section-title">Contact</h2>
						<h3 class="section-subtitle">We love talking</h3>
					</div>

					<form id="contact" method="post" class="form" role="form">
						<div class="form-group">
							<input class="form-control" id="subject" name="subject" placeholder="Subject" type="text" />
						</div>
						<div class="form-group">
							<input class="form-control" id="name" name="name" placeholder="Name" type="text" />
						</div>
						<div class="form-group">
							<input class="form-control" id="email" name="email" placeholder="Email" type="text" />
						</div>
						<textarea class="form-control" id="message" name="message" placeholder="Message" rows="6"></textarea>
						<br />
						<button class="btn btn-velvet" type="submit">Submit</button>
					</form>

				</div>
			</div>

		</div>

	</div>
</section><!-- /#contact -->

