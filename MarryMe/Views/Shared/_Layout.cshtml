<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title – приложение ASP.NET</title>
	@Styles.Render("~/Content/css")
	<link href="~/Content/responsive-calendar.css" rel="stylesheet" />
	<link href="~/Content/animation.css" rel="stylesheet" />
	<link href="~/Content/Month.css" rel="stylesheet" />
	@Scripts.Render("~/bundles/modernizr")
</head>
<body class="body-blue">
	<div class="container body-content">
		@RenderBody()

		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	<script src="~/Scripts/responsive-calendar.js"></script>
	<script src="~/Scripts/Logic/Tile.js"></script>
	<script src="~/Scripts/Logic/Calendar.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>
